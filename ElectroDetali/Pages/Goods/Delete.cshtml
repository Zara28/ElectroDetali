@page
@model ElectroDetali.Pages.Goods.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>
<div class="d-none">
    <input asp-for="StatusMessage" />
</div>
<h3>Вы уверены?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Good.Name)
        </dd>
        <dt class="col-sm-2">
           Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Good.Description)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Good.Price)
        </dd>
        <dt class="col-sm-2">
            Изображение
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Good.Image)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Good.Category.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Good.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
@section Scripts {
    <script>src = "https://cdn.jsdelivr.net/npm/sweetalert2@11.1.7/dist/sweetalert2.all.min.js" ></script>

    <script>
        $(document).ready(function () {
            let msg = $('#StatusMessage').val();
            if (msg.length > 0) {
                swal.fire(msg);
            }
        }
    </script>
}